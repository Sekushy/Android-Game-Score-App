<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oshiino.gamecounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamViewTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"

                android:text="Team A"
                android:textSize="14sp"
                android:textColor="@color/primaryText"/>

            <TextView
                android:id="@+id/scoreViewTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="0"
                android:textSize="56sp"
                android:textColor="@color/primaryText"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:id="@+id/three_point_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="threePointsScoredTeamA"
                android:text="+3 points"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/two_point_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="twoPointsScoredTeamA"
                android:text="+2 points"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/free_throw_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="freeThrowTeamA"
                android:text="Free throw"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dividerColors"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/teamViewTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Team B"
                android:textSize="14sp"
                android:textColor="@color/primaryText" />

            <TextView
                android:id="@+id/scoreViewTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="0"
                android:textSize="56sp"
                android:textColor="@color/primaryText"
                android:fontFamily="sans-serif-light" />

            <Button
                android:id="@+id/three_point_button_team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="threePointsScoredTeamB"
                android:text="+3 points"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/two_point_button_team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="twoPointsScoredTeamB"
                android:text="+2 points"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/free_throw_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="freeThrowTeamB"
                android:text="Free throw"
                android:textColor="@color/buttonText"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Reset"
        android:onClick="resetScore"
        android:textColor="@color/buttonText"
        android:background="@color/colorPrimaryDark"/>
</RelativeLayout>